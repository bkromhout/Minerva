<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bkromhout.minerva">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:name=".Minerva"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".AboutActivity"
                android:label="@string/title_activity_about"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="MainActivity"/>
        </activity>
        <activity
                android:name=".BookListActivity"
                android:label="@string/title_activity_book_list"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkromhout.minerva.MainActivity"/>
        </activity>
        <activity
                android:name=".TaggingActivity"
                android:label="@string/title_activity_tagging"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".BookInfoActivity"
                android:label="@string/title_activity_info"
                android:theme="@style/AppTheme.TransparentStatus">
        </activity>
        <activity
                android:name=".CoverActivity"
                android:label="@string/acc_book_cover"
                android:parentActivityName=".BookInfoActivity"
                android:theme="@style/AppTheme.TransparentStatus">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkromhout.minerva.BookInfoActivity"/>
        </activity>
        <activity
                android:name=".QueryBuilderActivity"
                android:label="@string/title_activity_query_builder"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/title_activity_settings"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkromhout.minerva.MainActivity"/>
        </activity>
        <activity
                android:name=".ImportActivity"
                android:label="@string/title_activity_import"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkromhout.minerva.MainActivity"/>
        </activity>
        <activity
                android:name=".WelcomeActivity"
                android:label="@string/title_activity_welcome"
                android:theme="@style/AppTheme.TransparentStatusNavigation">
        </activity>

        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="com.bkromhout.minerva.Minerva.files"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_provider_paths"/>
        </provider>

        <meta-data
                android:name="com.bkromhout.minerva.util.GlideConfig"
                android:value="GlideModule"/>
    </application>
</manifest>