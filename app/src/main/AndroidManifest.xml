<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bkp.minerva">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:name=".Minerva"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".AboutActivity"
                android:label="@string/title_activity_about"
                android:parentActivityName=".MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="MainActivity"/>
        </activity>
        <activity
                android:name=".BookListActivity"
                android:label="@string/title_activity_book_list"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkp.minerva.MainActivity"/>
        </activity>
        <activity
                android:name=".BookInfoActivity"
                android:label="@string/title_activity_info"
                android:theme="@style/AppTheme">
        </activity>
        <activity
                android:name=".SettingsActivity"
                android:label="@string/title_activity_settings"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkp.minerva.MainActivity"/>
        </activity>
        <activity
                android:name=".FullImportActivity"
                android:label="@string/title_activity_full_import"
                android:parentActivityName=".MainActivity"
                android:theme="@style/AppTheme">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.bkp.minerva.MainActivity"/>
        </activity>
    </application>

</manifest>
