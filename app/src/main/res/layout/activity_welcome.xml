<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context=".WelcomeActivity">

    <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/welcome_to"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Large"/>

    <android.support.percent.PercentRelativeLayout
            android:id="@+id/about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal">

        <ImageView
                android:id="@+id/about_logo"
                app:layout_heightPercent="12%"
                app:layout_aspectRatio="100%"
                android:src="@drawable/app_icon_no_bg"
                android:contentDescription="@string/acc_app_icon"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/about_logo"
                android:layout_alignBottom="@id/about_logo"
                android:textSize="30sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/app_name_part"/>
    </android.support.percent.PercentRelativeLayout>

    <TextView
            android:id="@+id/about_app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:text="@string/tag_line"
            style="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
            android:id="@+id/choose_lib_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/choose_library_dir_prompt"
            style="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
            android:id="@+id/lbl_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_folder"
            android:layout_gravity="start"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/LabelText"/>

    <TextView
            android:id="@+id/folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="/some/path/to/the/library/folder"/>

    <TextView
            android:id="@+id/first_import_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_time_import_prompt"
            android:visibility="gone"
            tools:visibility="visible"/>

    <Button
            android:id="@+id/choose_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/open_folder_chooser"/>

    <Button
            android:id="@+id/start_full_import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/start_full_import"
            android:visibility="gone"
            tools:visibility="visible"/>
</LinearLayout>