<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tag_card_height"
            android:layout_toStartOf="@+id/rename_tag"
            style="@style/MinervaDarkCard">

        <CheckedTextView
                android:id="@+id/tag_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:gravity="center_vertical"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                style="@style/TextAppearance.AppCompat.Medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                tools:text="Test Tag"/>
    </android.support.v7.widget.CardView>

    <ImageButton
            android:id="@id/rename_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tag_card_height"
            android:layout_marginTop="@dimen/card_margin_top"
            android:layout_toStartOf="@+id/delete_tag"
            android:layout_alignBaseline="@id/card"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/textColorPrimary"
            android:src="@drawable/ic_rename"
            android:contentDescription="@string/title_rename_tag"
            android:visibility="gone"
            tools:visibility="visible"/>

    <ImageButton
            android:id="@id/delete_tag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tag_card_height"
            android:layout_marginTop="@dimen/card_margin_top"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/transparent"
            android:tint="@color/textColorPrimary"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/title_delete_tag"
            android:visibility="gone"
            tools:visibility="visible"/>
</RelativeLayout>