<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_card_height"
        android:layout_marginTop="@dimen/card_margin_top"
        android:layout_marginEnd="@dimen/card_margin_right"
        android:layout_marginBottom="@dimen/card_margin_bottom"
        android:layout_marginStart="@dimen/card_margin_left"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardBackgroundColor="@color/cardview_dark_background">

    <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:id="@+id/list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_actions"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                tools:text="List name"/>

        <ImageButton
                android:id="@id/btn_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:tint="@color/textColorSecondary"
                android:backgroundTint="@color/cardview_dark_background"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="@string/acc_actions"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>