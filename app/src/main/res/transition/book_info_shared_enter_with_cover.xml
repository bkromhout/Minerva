<?xml version="1.0" encoding="utf-8"?>
<transitionSet
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:interpolator="@android:interpolator/fast_out_slow_in"
        android:transitionOrdering="together"
        android:duration="300">

    <transitionSet>
        <targets>
            <target android:targetId="@id/transition_bg"/>
        </targets>
        <changeBounds/>
    </transitionSet>

    <transitionSet>
        <targets>
            <target android:targetId="@id/cover_image"/>
        </targets>
        <changeBounds>
            <arcMotion/>
        </changeBounds>
        <changeTransform/>
        <changeClipBounds/>
        <changeImageTransform/>
    </transitionSet>
</transitionSet>