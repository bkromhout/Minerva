<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/base">
        <shape android:shape="rectangle">
            <size
                    android:width="@dimen/default_cover_dimen"
                    android:height="@dimen/default_cover_dimen"/>
            <solid android:color="@color/blueGrey800"/>
        </shape>
    </item>

    <item
            android:id="@+id/shadow1"
            android:top="119dp"
            android:right="-47dp"
            android:height="6dp">
        <rotate
                android:pivotX="0"
                android:pivotY="0"
                android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <gradient
                        android:type="linear"
                        android:endColor="@color/shadow_heavy"
                        android:angle="90"/>
            </shape>
        </rotate>
    </item>
    <item
            android:id="@+id/layer1"
            android:drawable="@drawable/default_cover_layer_1"/>

    <item
            android:id="@+id/shadow2"
            android:top="41dp"
            android:left="50dp"
            android:right="-40dp"
            android:height="4dp">
