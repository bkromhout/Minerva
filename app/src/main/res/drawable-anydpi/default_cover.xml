                android:pivotX="0"
                android:pivotY="0"
                android:fromDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                        android:type="linear"
                        android:startColor="@color/shadow_light"
                        android:angle="90"/>
            </shape>
        </rotate>
    </item>

    <item
            android:id="@+id/layer2"
            android:drawable="@drawable/default_cover_layer_2"/>

    <item
