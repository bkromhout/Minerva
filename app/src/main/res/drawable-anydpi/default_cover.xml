<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/base">
        <shape android:shape="rectangle">
            <size
                    android:width="@dimen/default_cover_dimen"
                    android:height="@dimen/default_cover_dimen"/>
            <solid android:color="@color/blueGrey800"/>
        </shape>
    </item>

    <item
            android:id="@+id/shadow1"
            android:top="236dp"
            android:right="-94dp"
            android:height="12dp">
