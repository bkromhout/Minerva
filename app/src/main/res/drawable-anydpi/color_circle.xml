<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/circle">
        <shape android:shape="oval">
            <solid android:color="@color/grey700"/>
        </shape>
    </item>
    <item android:id="@+id/ring">
        <shape
                android:shape="ring"
                android:useLevel="false"
                android:innerRadius="12dp"
                android:thickness="3dp">
            <size
                    android:height="30dp"
                    android:width="30dp"/>
            <solid android:color="@color/grey200"/>
            <stroke android:color="@color/grey200"/>
        </shape>
    </item>
</layer-list>